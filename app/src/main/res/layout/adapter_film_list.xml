<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/image_adapter_film"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_marginRight="8dp"/>

            <TextView
                android:id="@+id/text_adapter_filme_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image_adapter_film"
                style="@style/DescribeText"/>

            <TextView
                android:id="@+id/text_adapter_filme_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image_adapter_film"
                android:layout_below="@+id/text_adapter_filme_name"
                android:layout_marginLeft="8dp"/>
        </RelativeLayout>

        <include layout="@layout/progress_layout"/>

    </FrameLayout>



</android.support.v7.widget.CardView>